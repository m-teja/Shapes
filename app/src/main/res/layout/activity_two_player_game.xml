<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#54565B"
    tools:context=".TwoPlayerGame">

    <ImageView
        android:id="@+id/preStartBulletsSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:alpha="0.6"
        app:srcCompat="@drawable/background_bullets_side"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/preStartCursorSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:alpha="0.6"
        app:srcCompat="@drawable/background_cursor_side"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="473dp" />
</RelativeLayout>